#!/bin/sh
# Opens new tab in qutebrowser based on bookmark or search.

qb_get_searcher() {
	QB_CONFIG="$HOME/.config/qutebrowser/config.yml";
	sed -n '/^url.searchengines: {$/, /^}$/p' "$QB_CONFIG" | tail -n +2 | head -n -1 | grep -Ev '^[[:space:]]*#|^[[:space:]]*$' | sed 's/,//g' | rofi -show -dmenu -l 7 -p "ðŸ”Ž qb-open" -mesg 'choose searcher' | xargs;
}

while getopts "bs" arg; do
	case $arg in
		b) sid=$("$HOME"/.local/bin/uitools/rbuku -s);; # XXX Waiting for Input problem - https://github.com/jarun/buku/issues/447
		s) searcher=$(qb_get_searcher);
			if [ -n "$searcher" ] ; then
				sid=$(echo "$searcher" | awk -F ': ' '{print $1}');
				surl=$(echo "$searcher" | awk -F ': ' '{print $2}');
				notify-send "ðŸ”Ž qb-open" "$sid search selected";
				string=$(rofi -show -dmenu -l 7 -p "ðŸ”Ž qb-open" -mesg "search $sid ($surl)");
				if [ -n "$string" ] ; then
					notify-send "ðŸ”Ž qb-open" "$sid search started: $string";
				else
					notify-send "ðŸ”Ž qb-open" "$sid search cancelled" && exit 1;
				fi;
			else
				notify-send "ðŸ”Ž qb-open" "search cancelled" && exit 1;
			fi;;
		*) notify-send "qb-open" "invalid flag" && exit 1;;
	esac;
done;


if [ -n "$sid" ] || [ -n "$string" ] ; then
	qutebrowser ":open -t $sid $string" && exit 0;
fi;
